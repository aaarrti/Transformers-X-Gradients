Bootstrap: docker
From: nvcr.io/nvidia/tensorflow:22.12-tf2-py3

%post -c /bin/bash
    apt-get update
    apt-get --yes install python3-venv

%environment
    export LC_ALL=C
    export TF_XLA_FLAGS="--tf_xla_auto_jit=2 --tf_xla_cpu_global_jit"
    export DEBIAN_FRONTEND=noninteractive

%runscript
    exec "$@"
